SUB SayIt (i$, v%, f%, b%)
    DIM e$, l$, r$, w%
    IF i$ = "" THEN e$ = "" ELSE e$ = " ù "
    l$ = LEFT$(i$, LEN(i$) / 2)
    r$ = MID$(i$, LEN(l$) + 1)
    w% = 38
    l$ = RIGHT$(STRING$(w%, 32) + RIGHT$(e$, 2) + l$, w%)
    r$ = LEFT$(r$ + LEFT$(e$, 2) + STRING$(w%, 32), w%)
    IF v% < 2 THEN v% = 2
    IF v% > 22 THEN v% = 22
    COLOR f%, b%
    LOCATE v%, 3
    PRINT l$; r$
    COLOR Fgc%, Bgc%
END SUB

SUB Swipe (f%, b%)
    DIM x%
    FOR x% = Echo% TO 22
    SayIt "", x%, f%, b%
    NEXT
END SUB

SUB Table (a$, b$, p$, s$, w$)
    IF a$ = "<" THEN
        a$ = "left"
    ELSEIF a$ = ">" THEN
        a$ = "right"
    ELSE
        a$ = "center"
    END IF
    IF b$ = "" THEN b$ = "0"
    IF p$ = "" THEN p$ = "0"
    IF s$ = "" THEN s$ = "0"
    IF w$ = "" THEN w$ = "100"
    PRINT #2, "<table";
    PRINT #2, " align="; q; a$; q;
    PRINT #2, " border="; q; b$; q;
    PRINT #2, " cellpadding="; q; p$; q;
    PRINT #2, " cellspacing="; q; s$; q;
    PRINT #2, " width="; q; w$; "%"; q; ">"
END SUB

SUB Td (a$, c$, s$, t$, i$)
    IF a$ = "<" THEN
        a$ = "left"
    ELSEIF a$ = ">" THEN
        a$ = "right"
    ELSE
        a$ = "center"
    END IF
    IF c$ = "" THEN c$ = "text"
    IF s$ = "" THEN s$ = "100"
    IF LEFT$(t$, 1) = "<" THEN PRINT #2, "<tr>";
    PRINT #2, "<td";
    PRINT #2, " align="; q; a$; q;
    PRINT #2, " class="; q; c$; q;
    PRINT #2, " colspan="; q; s$; q;
    PRINT #2, " width="; q; s$; "%"; q; ">";
    IF i$ = "" THEN
        PRINT #2, ""
    ELSE
        DO
        FOR x% = 1 TO LEN(i$)
        IF MID$(i$, x%, 1) = "#" THEN
            PRINT #2, LEFT$(i$, x% - 1); "$";
            PRINT #2, USING (CNT); VAL(MID$(i$, x% + 1));
            EXIT DO
        ELSEIF MID$(i$, x%, 1) = "$" THEN
            PRINT #2, LEFT$(i$, x%);
            PRINT #2, USING (DLR); VAL(MID$(i$, x% + 1));
            EXIT DO
        END IF
        NEXT
        PRINT #2, i$;
        EXIT DO
        LOOP
        PRINT #2, "</td>";
        IF RIGHT$(t$, 1) = ">" THEN
            PRINT #2, "</tr>"
        ELSE
            PRINT #2, ""
        END IF
    END IF
END SUB

