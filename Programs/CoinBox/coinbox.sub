SUB Totalize
    DIM c$, d$, i$, j$, k$, v$, y$
    Flt% = 0
    DO
    CLOSE : OPEN "coinbox.dat" FOR INPUT AS #1
    IF Flt% = 0 THEN
        WHILE NOT EOF(1)
        INPUT #1, y$, d$, v$, c$
        IF LEFT$(c$, 1) = "!" THEN
            c$ = c$
        ELSE
            Tbc = Tbc + 1
            IF d$ = "" THEN
                Tbv = Tbv + .01
            ELSE
                CLOSE #3: OPEN "coinbox.cc" FOR INPUT AS #3
                IF Flt% = 0 THEN
                    DO WHILE NOT EOF(3)
                    INPUT #3, i$, j$, k$
                    IF i$ = d$ THEN
                        Tbv = Tbv + VAL(k$)
                        EXIT DO
                    END IF
                    LOOP
                ELSE
                    Flt% = 0
                    EXIT DO
                END IF
            END IF
        END IF
        WEND
    ELSE
        Flt% = 0
    END IF
    EXIT DO
    LOOP
    CLOSE
END SUB

SUB Tr (a$, b$, c$, d$, e$, s$)
    Td "", s$, "5", "<", a$
    Td "", s$, "2", "", b$
    Td "<", s$, "15", "", c$
    SELECT CASE LEFT$(d$, 1)
        CASE ".", "0" TO "9": Td ">", s$, "5", "", "#" + d$
        CASE ELSE: Td "<", s$, "5", "", d$
    END SELECT
    Td "<", s$, "73", ">", e$
END SUB

