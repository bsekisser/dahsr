SUB Htmlize
    DIM a$, b$, c$, d$, e$, i$, j$, k$
    Flt% = 0
    CLOSE : OPEN "coinbox.dat" FOR INPUT AS #1
    IF Flt% = 0 THEN
        OPEN "coinbox.htm" FOR OUTPUT AS #2
        Header
        WHILE NOT EOF(1)
        INPUT #1, a$, c$, d$, e$
        SELECT CASE LCASE$(RIGHT$(a$, 1))
            CASE "a" TO "z": b$ = UCASE$(RIGHT$(a$, 1)): a$ = LEFT$(a$, LEN(a$) - 1)
            CASE ELSE: b$ = "<br>"
        END SELECT
        IF c$ = "" THEN
            c$ = "Cent"
            d$ = ".01"
        ELSE
            Flt% = 0
            CLOSE #3: OPEN "coinbox.cc" FOR INPUT AS #3
            IF Flt% = 0 THEN
                DO WHILE NOT EOF(3)
                INPUT #3, i$, j$, k$
                IF i$ = "" THEN
                    i$ = ""
                ELSEIF i$ = c$ THEN
                    c$ = j$
                    IF d$ = "" THEN
                        IF k$ = "" THEN
                            k$ = ""
                        ELSE
                            d$ = k$
                        END IF
                    END IF
                    EXIT DO
                ELSE
                    i$ = i$ + " "
                    IF i$ = LEFT$(c$, LEN(i$)) THEN
                        i$ = LEFT$(i$, LEN(i$) - 1)
                        c$ = j$ + MID$(c$, LEN(i$) + 1)
                        IF d$ = "" THEN
                            IF k$ = "" THEN
                                k$ = ""
                            ELSE
                                d$ = k$
                            END IF
                        END IF
                        EXIT DO
                    END IF
                END IF
                LOOP
            ELSE
                Flt% = 0
            END IF
        END IF
        CLOSE #3
        IF e$ = "" THEN
            e$ = "Circulated"
        ELSE
            IF e$ = "!" THEN
                e$ = "Circulated (Watch List)!"
                s$ = "atxt"
            ELSEIF LEFT$(e$, 1) = "!" THEN
                e$ = MID$(e$, 2) + " (Watch List)!"
                s$ = "atxt"
            ELSE
                s$ = "text"
            END IF
            IF LEFT$(e$, 2) = "**" THEN
                e$ = MID$(e$, 3) + " (Gold)"
            ELSEIF RIGHT$(e$, 2) = "**" THEN
                e$ = LEFT$(e$, LEN(e$) - 2) + " (Gold)"
            ELSEIF LEFT$(e$, 1) = "*" THEN
                e$ = MID$(e$, 2) + " (Silver)"
            ELSEIF RIGHT$(e$, 1) = "*" THEN
                e$ = LEFT$(e$, LEN(e$) - 1) + " (Silver)"
            END IF
            Flt% = 0
            CLOSE #3: OPEN "coinbox.ee" FOR INPUT AS #3
            IF Flt% = 0 THEN
                DO WHILE NOT EOF(3)
                INPUT #3, i$, j$
                IF i$ = "" THEN
                    i$ = ""
                ELSEIF i$ = e$ THEN
                    e$ = j$
                    EXIT DO
                ELSE
                    i$ = i$ + " "
                    IF i$ = LEFT$(e$, LEN(i$)) THEN
                        i$ = LEFT$(i$, LEN(i$) - 1)
                        e$ = j$ + MID$(e$, LEN(i$) + 1)
                        EXIT DO
                    END IF
                END IF
                LOOP
            ELSE
                Flt% = 0
            END IF
            CLOSE #3
        END IF
        Tr a$, b$, c$, d$, e$, s$
        WEND
        Footer
    ELSE
        Flt% = 0
    END IF
    CLOSE
END SUB

SUB Initialize
    DIM i$, x%
    FOR x% = 1 TO 12: READ Mth(x%): NEXT
    Bgc% = 1
    Echo% = 2
    Family$ = "georgia," + CHR$(34) + "times new roman" + CHR$(34) + ",trebuchet,serif"
    Fgc% = 15
    Flt% = 0
    q = CHR$(34)
    Title$ = "The Coinbox"
    Today$ = MID$(DATE$, 4, 2) + " " + Mth(VAL(LEFT$(DATE$, 2))) + " " + RIGHT$(DATE$, 4)
    CLOSE : OPEN PRGM + ".ini" FOR INPUT AS #1
    IF Flt% = 0 THEN
        WHILE NOT EOF(1)
        LINE INPUT #1, i$
        FOR x% = 1 TO LEN(i$)
        IF x% < LEN(i$) THEN
            SELECT CASE UCASE$(LEFT$(i$, x%))
                CASE "FAMILY=": Family$ = MID$(i$, x% + 1): EXIT FOR
            END SELECT
        END IF
        NEXT
        WEND
    END IF
    CLOSE : OPEN "echo.dat" FOR INPUT AS #1
    INPUT #1, Echo%
    CLOSE
    SHELL "dir > dir.shl"
    OPEN "dir.shl" FOR INPUT AS #1
    FOR x% = 1 TO 4: LINE INPUT #1, i$: NEXT
    CLOSE : KILL "dir.shl"
    FOR x% = 1 TO LEN(i$)
    SELECT CASE LCASE$(MID$(i$, x%, 4))
        CASE "/fix", "fix/", "\fix", "fix\": Bgc% = 0: EXIT FOR
    END SELECT
    NEXT
    DO
    IF RIGHT$(Family$, 1) = ";" THEN
        Family$ = LEFT$(Family$, LEN(Family$) - 1)
    ELSE
        EXIT DO
    END IF
    LOOP
END SUB

