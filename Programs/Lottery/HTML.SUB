SUB FormatLine (i$)
    DIM l$, x%
    FOR x% = 1 TO LEN(i$)
    SELECT CASE ASC(MID$(i$, x%, 1))
        CASE 196: l$ = l$ + "-"
        CASE 180, 182, 186, 195, 199: l$ = l$ + "|"
        CASE 187, 188, 200, 201, 205: l$ = l$ + "="
        CASE 32 TO 126: l$ = l$ + MID$(i$, x%, 1)
    END SELECT
    NEXT
    i$ = l$
END SUB

