SUB MsgBox (i$)
    SayIt "É" + STRING$(78, 205) + "»", WSZ + 1, 15, 4
    SayIt LEFT$("º" + STRING$(40 - (LEN(i$) / 2), 32) + i$ + STRING$(40, 32), 79) + "º", WSZ + 2, 15, 4
    SayIt "È" + STRING$(78, 205) + "¼", WSZ + 3, 15, 4
END SUB

SUB Purge
    DIM i$
    SHELL "dir html > html.shl /B"
    CLOSE : OPEN "html.shl" FOR INPUT AS #1
    WHILE NOT EOF(1)
    LINE INPUT #1, i$
    SELECT CASE UCASE$(LEFT$(i$, 1))
        CASE "0" TO "9", "A" TO "Z": KILL "html\" + i$
    END SELECT
    WEND
    CLOSE
END SUB

SUB SayIt (i$, v%, f%, b%)
    DIM l$, r$, w%
    w% = 40
    l$ = LEFT$(i$, LEN(i$) / 2)
    r$ = MID$(i$, LEN(l$) + 1)
    l$ = RIGHT$(STRING$(w%, 32) + l$, w%)
    r$ = LEFT$(r$ + STRING$(w%, 32), w%)
    LOCATE v%, 1
    COLOR f%, b%
    PRINT l$; r$
    COLOR Fgc%, Bgc%
END SUB

SUB Start (f$)
    Ln$ = "&nbsp;": Ty$ = "&nbsp;": Px$ = "&nbsp;": Lo$ = "&nbsp;": Hi$ = "&nbsp;": Bp$ = "&nbsp;": Bl$ = "&nbsp;": Bh$ = "&nbsp;"
    Flt% = 0
    CLOSE #3: OPEN "dbse\" + f$ FOR INPUT AS #3
    IF Flt% = 0 THEN
        INPUT #3, Ln$, Ty$, Px$, Lo$, Hi$
        IF VAL(Ty$) > 2 THEN INPUT #3, Bp$, Bl$, Bh$
    END IF
END SUB

SUB Table (n%, a$, b$, p$, s$, w$)
    SELECT CASE a$
        CASE "", "^", "c": a$ = "center"
        CASE "<", "l": a$ = "left"
        CASE ">", "r": a$ = "right"
    END SELECT
    IF b$ = "" THEN b$ = "0"
    IF p$ = "" THEN p$ = "0"
    IF s$ = "" THEN s$ = "0"
    DO
    IF RIGHT$(w$, 1) = "%" THEN
        w$ = LEFT$(w$, LEN(w$) - 1)
    ELSE
        EXIT DO
    END IF
    LOOP UNTIL w$ = ""
    IF w$ = "" THEN w$ = "100"
    PRINT #n%, "<table";
    PRINT #n%, " align="; q$; a$; q$;
    PRINT #n%, " border="; q$; b$; q$;
    PRINT #n%, " cellpadding="; q$; p$; q$;
    PRINT #n%, " cellspacing="; q$; s$; q$;
    PRINT #n%, " width="; q$; w$; "%"; q$; ">"
END SUB

SUB Td (n%, a$, c$, s$, o$, i$)
    SELECT CASE a$
        CASE "": a$ = "center"
        CASE "<": a$ = "left"
        CASE ">": a$ = "right"
    END SELECT
    IF c$ = "" THEN c$ = "text"
    IF s$ = "" THEN s$ = "100"
    IF LEFT$(o$, 1) = "<" THEN PRINT #n%, "<tr>"
    PRINT #n%, "<td";
    PRINT #n%, " align="; q$; a$; q$;
    PRINT #n%, " class="; q$; c$; q$;
    PRINT #n%, " colspan="; q$; s$; q$;
    PRINT #n%, " valign="; q$; "top"; q$;
    PRINT #n%, " width="; q$; s$; "%"; q$; ">"
    IF LEN(i$) > 0 THEN PRINT #n%, i$; "</td>"
    IF RIGHT$(o$, 1) = ">" THEN PRINT #n%, "</tr>"
END SUB

