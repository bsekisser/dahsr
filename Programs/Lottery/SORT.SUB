SUB SayIt (i$, v%, f%, b%)
    DIM h%, l$, r$, w%
    w% = 40
    SELECT CASE w%
        CASE 38: h% = 3
        CASE 39: h% = 2
        CASE ELSE: h% = 1
    END SELECT
    l$ = LEFT$(i$, LEN(i$) / 2)
    r$ = MID$(i$, LEN(l$) + 1)
    l$ = RIGHT$(STRING$(w%, 32) + l$, w%)
    r$ = LEFT$(r$ + STRING$(w%, 32), w%)
    COLOR f%, b%
    LOCATE v%, h%
    PRINT l$; r$
    COLOR Fgc%, Bgc%
END SUB

SUB Sequent (s$)
    DIM n$, x%, y%
    REDIM a(10)
    IF VAL(Ty$) = 1 THEN
        n$ = s$
    ELSE
        y% = 1
        a(y%) = VAL(s$)
        FOR x% = 1 TO LEN(s$)
        IF MID$(s$, x%, 1) = "," THEN
            y% = y% + 1
            a(y%) = VAL(MID$(s$, x% + 1))
        END IF
        NEXT
        FOR x% = 1 TO VAL(Px$)
        FOR y% = x% TO VAL(Px$)
        IF a(x%) > a(y%) THEN SWAP a(x%), a(y%)
        NEXT
        NEXT
        FOR x% = 1 TO VAL(Px$)
        n$ = n$ + RIGHT$("00" + MID$(STR$(a(x%)), 2), 2) + ","
        NEXT
        IF VAL(Ty$) = 3 THEN
            n$ = n$ + RIGHT$("00" + MID$(STR$(a(x%)), 2), 2)
        END IF
        IF RIGHT$(n$, 1) = "," THEN n$ = LEFT$(n$, LEN(n$) - 1)
    END IF
    s$ = n$
END SUB

SUB TransferFiles
    DIM f$
    SHELL "dir sbse > sbse.shl /B"
    CLOSE
    OPEN "sbse.shl" FOR INPUT AS #1
    WHILE NOT EOF(1)
    LINE INPUT #1, f$
    SELECT CASE UCASE$(LEFT$(f$, 1))
        CASE "0" TO "9", "A" TO "Z"
            KILL "dbse\" + f$
            NAME "sbse\" + f$ AS "dbse\" + f$
    END SELECT
    WEND
    CLOSE
END SUB

