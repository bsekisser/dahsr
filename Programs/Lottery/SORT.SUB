SUB Purge
    DIM i$
    MKDIR "sbse"
    SHELL "dir sbse > sbse.shl /B"
    CLOSE
    OPEN "sbse.shl" FOR INPUT AS #1
    WHILE NOT EOF(1)
    LINE INPUT #1, i$
    SELECT CASE UCASE$(LEFT$(i$, 1))
        CASE "0" TO "9", "A" TO "Z"
            KILL "sbse\" + i$
    END SELECT
    WEND
END SUB

SUB ReDate (i$)
    DIM d$, m$, x%, y$
    m$ = MID$(STR$(VAL(i$)), 2)
    FOR x% = 1 TO LEN(i$)
    IF MID$(i$, x%, 1) = "/" THEN
        IF d$ = "" THEN
            d$ = MID$(STR$(VAL(MID$(i$, x% + 1))), 2)
        ELSE
            y$ = MID$(STR$(VAL(MID$(i$, x% + 1))), 2)
            EXIT FOR
        END IF
    END IF
    NEXT
    i$ = RIGHT$("00" + y$, 2) + RIGHT$("00" + m$, 2) + RIGHT$("00" + d$, 2)
END SUB

