DECLARE SUB Main ()
    CONST BGC = 1, BOOT = "biorythm.bas", FGC = 15, MXB = 13
    CONST MXL = 76, PI = 3.14, PRGM = "biorythm", WSZ = 15
    COMMON SHARED Flt%
    COMMON SHARED Nod%
    COMMON SHARED Nob%
    COMMON SHARED Today$
    DIM SHARED Cycle(7) AS STRING, Month(12) AS INTEGER
    ON ERROR GOTO Trap
    Initialize
    Bufferize
    Main
END
Trap: Flt% = ERR: RESUME NEXT
DATA 31,28,31,30,31,30,31,31,30,31,30,31
