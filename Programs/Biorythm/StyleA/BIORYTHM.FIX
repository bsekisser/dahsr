SUB Bufferize
    DIM c$, i$, n%, v%, x%
    CLOSE
    OPEN PRGM + ".txt" FOR INPUT AS #1
    OPEN PRGM + ".bfr" FOR OUTPUT AS #2
    WHILE NOT EOF(1)
    LINE INPUT #1, i$
    Calculate i$, n%
    i$ = i$ + "³"
    FOR x% = 1 TO 7
    v% = INT(SIN(2 * PI * n% / VAL(Cycle(x%))) * 100) + 100
    SELECT CASE v%
        CASE 0: c$ = "A"
        CASE 1 TO 44: c$ = "B"
        CASE 45 TO 55: c$ = "C"
        CASE 56 TO 99: c$ = "D"
        CASE 100: c$ = "E"
        CASE 101 TO 144: c$ = "F"
        CASE 145 TO 155: c$ = "G"
        CASE 156 TO 199: c$ = "H"
        CASE 200: c$ = "I"
        CASE ELSE: c$ = "?"
    END SELECT
    i$ = i$ + STRING$(9, c$)
    IF x% < 7 THEN i$ = i$ + "³"
    NEXT
    PRINT #2, LEFT$(i$ + STRING$(MXL, 46), MXL)
    WEND
END SUB

SUB Calculate (b$, n%)
    DIM d%, m%, t$, y%
    t$ = Today$
    FOR x% = 1 TO LEN(b$)
    IF MID$(b$, x%, 1) = "," THEN
        t$ = RIGHT$(b$, x% + 1)
        b$ = LEFT$(b$, x% - 1)
        EXIT FOR
    END IF
    NEXT
    Format b$
    Format t$
    n% = 0
    m% = VAL(LEFT$(b$, 2))
    d% = VAL(MID$(b$, 4, 2))
    y% = VAL(RIGHT$(b$, 2))
    DO
    n% = n% + 1
    SELECT CASE y%
        CASE 4, 8, 12, 16, 20, 24, 28, 32, 36, 40: Month(2) = 29
        CASE 44, 48, 52, 56, 60, 64, 68, 72, 76, 80, 84, 88, 92, 96: Month(2) = 29
    END SELECT
    d% = d% + 1
    IF d% > Month(m%) THEN d% = 1: m% = m% + 1
    IF m% > 12 THEN m% = 1: y% = y% + 1
    IF y% > 99 THEN y% = 0
    IF t$ = RIGHT$("00" + MID$(STR$(m%), 2), 2) + RIGHT$("00" + MID$(STR$(d%), 2), 2) + RIGHT$("00" + MID$(STR$(y%), 2), 2) THEN EXIT DO
    LOOP
END SUB

